<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client" xmlns:mh="urn:import:com.materials.client.views">
	<ui:style type="com.materials.client.widgets.infos.InfosWidget.Style">
	.rightContainer {
		background-color: #DCDCDC;
		border: 10px solid white;
		margin-left: 10px;
		margin-right: 10px;

	}
	
	.areaTitle {
		color: #ffb140;
		margin-bottom: 15px;
		font-family: times new roman, times, serif;
		font-size: 22px !important;
		border-bottom: 1px solid #ffb140;
		text-shadow: 1px 1px 1px black;
	}
	.card {
		margin-bottom: 20px;
	}
	
	.imageCard {
		border-right: 3px solid #ffb140;
	}
	
	.imageCircle {
		height: 65px !important;
		width: 65px !important;
	}
	
	.cardTitle {
		color: #ffb140;
		margin-top: 1px;
		font-family: times new roman, times, serif;
		font-size: 17px !important;
		text-shadow: 1px 1px 1px black;
	}
	
	.cardContent {
		padding-top: 1px !important;
		font-family: times new roman, times, serif;
		background: white;
	}
	</ui:style>
	<m:MaterialCard ui:field="materialCardUi" padding="20" 
		styleName="{style.rightContainer}" opacity="0">
		
		<m:MaterialRow ui:field="topUi"/>
		<m:MaterialRow ui:field="middleUi"/>
		<m:MaterialRow ui:field="bottomUi"/>

	</m:MaterialCard>
</ui:UiBinder> 