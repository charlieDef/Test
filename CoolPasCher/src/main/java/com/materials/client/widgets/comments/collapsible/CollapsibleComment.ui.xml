<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:style type="com.materials.client.widgets.comments.collapsible.CollapsibleComment.CollapsStyle">
		.collapsArea{
			margin: 0px 0px 0px 0px;

			
		}

		.collapsItemUserImg{
			width: 55px !important;
			height: 55px !important;
			float: left;
			margin-right: 15px;
			margin-top: -5px;
		}

		.collapsItemBody{
			background-color: #F5F5F5;
		}
		
		.collapsItemUserNameLabel{
			color: #ffc107 ;
			font-weight: bold;
		}
		

		
		.collapsItemTitleLabel{
			font-size: 1em;
			font-weight: bold;
			margin-top: -10px;
			float: left;
		}
		
		.collapsRating{
			padding: 0px;
			float: right;
			margin-right: -5px;
			margin-top: -10px;
		}
		
		.collapsDateLabel{
			color: #bbb;
			float: right;
			margin-right: 5px;
		}
		
			.commentaires{
	border: 1px solid #ccc;
		font-weight: bold;
	background-color: #eee;
	margin-bottom: 0px;
	padding-left: 15px;
	    border-radius: 3px 3px 0px 0px;
}
		
			.panelCommentUi{

	max-height:696px;
	overflow: auto;
}

	</ui:style>


	<m:MaterialPanel styleName="{}">
			<m:MaterialLabel text="Questions | Reponses" styleName="{style.commentaires}" />
			
			<m:MaterialPanel styleName="{style.panelCommentUi}">
				<m:MaterialCollapsible ui:field="collapsibleUi" styleName="{style.collapsArea}" />
			</m:MaterialPanel>
	</m:MaterialPanel>
	



</ui:UiBinder> 