<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client" xmlns:mh="urn:import:com.materials.client.views">
	<ui:style>
	.base {
		position: relative;
	}
	
	.theWidget {
		position: absolute;
		right: 0;
		margin-right: 10px;
		font-size: 2.5rem;
		cursor: pointer;
		color: #aaa;
	}
	
	.theWidget:hover {
		color: rgb(255, 183, 77);
	}
	
	</ui:style>
	<m:MaterialPanel styleName="{style.base}" paddingLeft="10" ui:field="materialPanelUi">

		<m:MaterialIcon ui:field="iconUi" iconType="SEARCH"
			styleName="{style.theWidget}" />
		<m:MaterialTextBox ui:field="boxUi"  placeholder="Mot-ClÃ©"
			fieldType="OUTLINED" marginRight="50" marginTop="2"/>
	</m:MaterialPanel>

</ui:UiBinder> 