<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ma='urn:import:gwt.material.design.addins.client'>
	<ui:style
		type="com.materials.client.widgets.question.QuestionReponsePanel.CollapsStyle">
		.collapsArea {
			margin: 0px 0px 0px 0px;
		}
		
		.collapsItemUserImg {
			width: 55px !important;
			height: 55px !important;
			float: left;
			margin-right: 15px;
			margin-top: -5px;
		}
		
		.collapsItemBody {
			background-color: #F5F5F5;
		
		}
		
		.collapsItemUserNameLabel {
			color: #ffc107;
			font-weight: bold;
			margin-bottom: -10px;
		}
		
		.collapsItemTitleLabel {
			font-size: 1em;
			margin-top: -15px;
			margin-bottom: -20px;
			font-style: oblique;

		}
		
		.collapsRating {
			padding: 0px;
			float: right;
			margin-right: -5px;
			margin-top: -10px;
		}
		
		.collapsDateLabel {
			color: #bbb;
			float: right;
			margin-right: 5px;
		}
		
		.commentaires {


			font-weight: bold;
			background-color: #eee;
			margin-bottom: 0px;
			padding-left: 15px;
			border-radius: 3px 3px 0px 0px;
		}
		
		.panelCommentUi {
			max-height: 696px;
			overflow: auto;
		}
		
		.cardContent{
	
			border-radius: 5px;
			padding-bottom: 20px;
			max-height: 500px;
			overflow: auto;

		}
		
		</ui:style>



	<m:MaterialCard styleName="{style.cardContent}">
		<m:MaterialLabel ui:field="questionLabelUi" text="Questions |" styleName="{style.commentaires}" />

		<m:MaterialPanel styleName="{style.panelCommentUi}">
			<m:MaterialCollapsible ui:field="materialCollapsibleUi" styleName="{style.collapsArea}" />
		</m:MaterialPanel>
	</m:MaterialCard>


</ui:UiBinder> 