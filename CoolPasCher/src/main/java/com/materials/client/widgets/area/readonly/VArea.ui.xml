<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:te="urn:import:com.materials.client.widgets.area.editable.text"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.titel {
		padding-left: 5px;
	
	}
	
	.titel p {
		margin-top: 0px !important;
		margin-bottom: 0px !important;
		
	}
	.image {
		border: 1px solid rgb(204, 204, 204);
		padding: 5px;
		background: white;
		margin-left: -10px;
			margin-top: 5px;
	}
	
	.area {
		font-size: 16px;
margin-top:-10px;
		font-family: times new roman, times, serif;
		padding: 5px;
	}
		.area ul li{
		list-style-type: square !important;
		margin-left: 40px;
	}
	
			.area ol{
		margin-left: 40px;
	}
	
	</ui:style>
	

	<m:MaterialPanel styleName="{style.area}">
	<m:MaterialRow marginBottom="10">
		<g:HTML ui:field="textTitelUi" styleName="{style.titel}" />
	</m:MaterialRow>
	<m:MaterialRow ui:field="rowParentUi">
	
		<m:MaterialColumn ui:field="columnImageUi" grid="s12 l5" >
			<m:MaterialImage ui:field="imageUi" url="i"  styleName="{style.image}"/>
		</m:MaterialColumn>
		
		<g:HTML ui:field="textContentUi" styleName="{style.area}" />

	</m:MaterialRow>
	</m:MaterialPanel>



</ui:UiBinder> 