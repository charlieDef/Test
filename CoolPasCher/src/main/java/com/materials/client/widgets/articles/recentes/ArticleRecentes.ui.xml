	<ui:style type="com.materials.client.widgets.articles.recentes.ArticleRecentes.Style" >
	
		.filter{
		color: #ffb140;
		text-align: center;
		cursor: text;
		font-size: 18px;
		}

	.important {
		text-align: left !important;
		margin-left: 10px;
		margin-right: 10px;
		margin-top: 10px;
		margin-bottom: 10px !important;
	}
	

	.myCard{
	border-radius: 5px;
	}
	
	.filter{
		color: #ffb140;
		text-align: center;
		cursor: text;
		font-size: 18px;
	}
	
	.imageCard {
		border-bottom: 2px solid #ffb140;
			border-bottom-left-radius: 30px !important;
			border-bottom-right-radius: 30px !important;

	}
	
	.cardTitle {
		color: #ffb140;
